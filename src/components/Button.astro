---
interface Props {
  href: string;
}

const { href } = Astro.props;
---

<a href={href}>
  <slot></slot>
</a>

<style>
  a {
    color: #2dde74;
    border: 1px solid #2dde74;
    border-radius: 0.5rem;
    padding: 1rem;
    margin: 1rem 0;
    display: inline-block;
    text-decoration: none;
    text-transform: uppercase;
    font-weight: bold;
    letter-spacing: 1px;
    font-size: 1.25em;
  }
  a:hover {
    color: #fff;
    border-color: #fff;
  }
  a:active {
    color: #ffd00e;
    border-color: #ffd00e;
  }
</style>
